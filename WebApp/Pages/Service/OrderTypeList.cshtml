@page
@model WebApp.Pages.Service.OrderModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link rel="stylesheet" href="~/Pages/Shared/Layout.cshtml.css" asp-append-version="true" />
<style> 
    body{
    background-color:aquamarine;
    }
</style>
<div class="container-fluid bg_body ">
    <div class="row d-flex mt-5 justify-content-center ">
        <div class="col-4 text-center mb-4 mx_width shad">
            <h2>Packages</h2>
        </div>
    </div>
    <div class=" row justify-content-start mx-3 my-2 p-5 border border-3 bg_color">
        @foreach(var item in Model.List)
        {
            <div class="col-md-3 mb-3 text-center mx-3 ">
                <div class="card shadow p-3 mb-5 bg-body-tertiary rounded" style="width: 18rem;">
                    <img src="https://images.unsplash.com/photo-1511795409834-ef04bbd61622?q=80&w=2069&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top" alt="No Image Found">
                    <div class="card-body">
                        <h5 class="card-title">@item.EventName</h5>
                        <p class="card-text">Click on select to arrange this event</p>
                        <a asp-route-Id="@item.EventId" asp-page="/Service/PurchaseTypeList" class="btn btn-primary">Select</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>