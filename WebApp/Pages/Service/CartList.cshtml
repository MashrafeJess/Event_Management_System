@page
@model WebApp.Pages.Service.CartListModel
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Event Name</th>
            <th>Event Type</th>
            <th>Price</th>
			<th>Location</th>
            <th>Date</th>
			<th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.List != null && Model.List.Any())
        {
            foreach (var item in Model.List)
            {
                <tr>
                    <td>@item.EventName</td>
                    <td>@item.SizeName</td>
                    <td>@item.Price</td>
					<td>@item.Location</td>
					<td>@item.EventDate</td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary" asp-page="/Service/Purchase" asp-route-Id="@item.CartId">
                            @* <i class="bi bi-pencil-square"></i> Edit *@
                            <i class="bi bi-pen"></i>
                        </a>
                    </td>
                    <td>
                        <form method="post" asp-page-handler="Done" asp-route-id="@item.CartId" asp-page="/Service/CartList">
                            <button type="submit" class="btn btn-success btn-sm">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"></path>
                                </svg>
                                Done
                            </button>
                        </form>
                    </td>

                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No events available.</td>
            </tr>
        }
    </tbody>
</table>
