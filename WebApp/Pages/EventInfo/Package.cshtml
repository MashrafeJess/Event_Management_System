@page
@model WebApp.Pages.EventInfo.PackageModel
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Packages</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="@Model.model.PackageId" />

                        <div class="mb-3">
                            <label for="EventSelect" class="form-label">Event</label>
                            <select asp-for="@Model.model.EventId" class="form-control" id="EventSelect" required>
                                <option value="">Select an Event</option>
                                @foreach (var item in Model.events)
                                {
                                    <option value="@item.EventId">@item.EventName</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="SizeSelect" class="form-label">Size</label>
                            <select asp-for="@Model.model.SizeId" class="form-control" id="SizeSelect" required>
                                <option value="">Select an Event Type</option>
                                @foreach (var item in Model.sizes)
                                {
                                    <option value="@item.SizeId">@item.SizeName</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="Price" class="form-label">Price</label>
                            <input asp-for="@Model.model.Price" class="form-control" id="Price" placeholder="Enter Price Value" required />
                        </div>

                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle me-1"></i> Save Changes
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
