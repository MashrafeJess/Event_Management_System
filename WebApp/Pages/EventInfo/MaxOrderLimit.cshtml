@page "{id?}"
@model WebApp.Pages.EventInfo.MaxOrderLimitModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Maximum Order Limit</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Limit.MaxOrderId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                        <div class="mb-3">
                            <label asp-for="Limit.MaxOrder" class="form-label"></label>
                            <input asp-for="Limit.MaxOrder" type="number" min="1" class="form-control" placeholder="Enter Limit" required />
                            <span asp-validation-for="Limit.MaxOrder" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle me-1"></i> Save Changes
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
