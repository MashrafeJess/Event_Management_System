@page
@model WebApp.Pages.EventInfo.PackageListModel
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<a class="btn btn-primary mb-3 " asp-area="" asp-page="/EventInfo/Package">Add New Package</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Event Name</th>
            <th>Event Type</th>
            <th>Editor</th>
            <th>Price</th>
            <th>Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.List != null && Model.List.Any())
        {
            foreach (var item in Model.List)
            {
                <tr>
                    <td>@item.EventName</td>
                    <td>@item.SizeName</td>
                    <td>@item.UserName</td>
                    <td>@item.Price tk</td>
                    <td>@item.CreatedDate</td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary" asp-page="/EventInfo/Package" asp-route-Id="@item.PackageId">
                            @* <i class="bi bi-pencil-square"></i> Edit *@
                            <i class="bi bi-pen"></i>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No Packages available.</td>
            </tr>
        }
    </tbody>
</table>
