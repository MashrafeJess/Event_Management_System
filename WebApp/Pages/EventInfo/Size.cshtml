@page
@model WebApp.Pages.EventInfo.SizeModel

@* Add this in your <head> or layout if not already included *@
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Event Type</h5>
                    @* <span class="badge bg-light text-dark">Edit</span> *@
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="@Model.model.SizeId" />

                        <div class="mb-3">
                            <label for="Name" class="form-label">Name</label>
                            <input asp-for="@Model.model.SizeName" class="form-control" id="Name" placeholder="Enter Event name" required />
                        </div>

                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle me-1"></i> Save Changes
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
