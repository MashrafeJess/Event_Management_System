@page
@model WebApp.Pages.Account.LoginModel
@{
    Layout = "MyLayout";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-container {
            height: 100vh;
            background: linear-gradient(to right, #673AB7, #512DA8);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-box {
            background-color: #fff;
            padding: 40px 30px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
        }

        .login-header {
            text-align: center;
            margin-bottom: 25px;
            font-size: 26px;
            font-weight: 600;
            color: #3F51B5;
        }

        .form-control {
            border-radius: 6px;
            border: 1px solid #ccc;
        }

        .login-button {
            background-color: #3F51B5;
            color: #fff;
            border: none;
            padding: 10px 0;
            width: 100%;
            border-radius: 6px;
            transition: background-color 0.3s ease;
        }

        .login-button:hover {
            background-color: #303F9F;
        }

        .register-link {
            text-align: center;
            margin-top: 20px;
            display: block;
            color: #555;
        }
    </style>
}

<div class="login-container">
    <div class="login-box">
        <div class="login-header">Login</div>
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input asp-for="loginForm.Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="loginForm.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input asp-for="loginForm.Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="@Model.loginForm.Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn login-button">Login</button>
        </form>

        <a class ="reg-link" href="/Account/Registration">Don't have an account? Sign Up</a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
